    </update>

    <!--用户机构关联逻辑删除-->
    <update id="delUOrgById" parameterType="Integer">
        update ib_userinorg uo set uo.organizationid = '' , uo.organizationtype = '' , uo.usertype =
        0 where userid = #{userId}
    </update>

    <!--用户班级表删除-->
