    <!--APP查询用户信息-->
    <select id="searchById" parameterType="Integer"
            resultType="com.xunyun.infanteduplatform.domain.interaction.UserInfo">
        select
        USERNAME,NICKNAME,NAME,GENDERCODE,IDNO,BIRTHDAY,MOBILE,TELEPHONE,EMAIL,QQ,DESCRIPTION,PHOTOURL
        from ib_userinfo where userid = #{userId}
    </select>
    <!--APP用户信息修改-->
    <update id="updateUserInfoforImi" parameterType="java.util.Map">
        update ib_userinfo
        <trim prefix="SET" suffixOverrides=",">
            <if test="nickName != null and nickName != ''">
                nickName = #{nickName},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="genderCode != null and genderCode != ''">
                genderCode = #{genderCode},
            </if>
            <if test="idNo != null and idNo != ''">
                idNo = #{idNo},
            </if>
            <if test="birthday != null and birthday != ''">
                birthday = #{birthday},
            </if>
            <if test="telephone != null and telephone != ''">
                telephone = #{telephone},
            </if>
            <if test="qq != null and qq != ''">
                qq = #{qq},
            </if>
            <if test="description != null and description != ''">
                description = #{description}
            </if>
        </trim>
        where userId=#{userId}
    </update>
